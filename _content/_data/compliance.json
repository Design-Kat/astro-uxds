[
  {
    "name": "General",
    "numeral": 1,
    "rules": [
      {
        "numeral": 1,
        "rule": "All designs should follow the guidance marked as “Rules of Thumb”, “Do's” and “Don'ts”.",
        "status": "new"
      }
    ]
  },
  {
    "name": "Design Guidelines",
    "numeral": 2,
    "rulesets": [
      {
        "name": "Color",
        "numeral": 1,
        "link": "/design-guidelines/color/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Ordinary User Interface elements and backgrounds shall be designed with the colors identified in the Primary, Secondary, Tertiary, and Quaternary palettes.",
            "status": "new"
          },
          {
            "numeral": 2,
            "rule": "User Interface elements that require distinct colors shall be designed with the colors identified in the [Tag 1](/design-guidelines/color/#tag-1), [Tag 2](/design-guidelines/color/#tag-2), [Tag 3](/design-guidelines/color/#tag-3), and [Tag 4](/design-guidelines/color/#tag-4) palettes.",
            "status": "draft"
          }
        ]
      },
      {
        "name": "Typography",
        "numeral": 2,
        "link": "/design-guidelines/typography/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Applications shall be designed using the Open Sans and Roboto Mono fonts.",
            "status": "new"
          },
          {
            "numeral": 2,
            "rule": "Applications should follow the typeface size guidelines for [Heading](/design-guidelines/typography/#headings) and [Body](/design-guidelines/typography/#body-text) elements.",
            "status": "new"
          }
        ]
      }
    ]
  },

  {
    "name": "Patterns",
    "numeral": 3,
    "rulesets": [
      {
        "name": "Status System",
        "numeral": 1,
        "link": "/patterns/status-system/",
        "rules": [
          {
            "numeral": 1,
            "rule": "User Interface elements indicating state or status shall be designed with the [six shapes](/patterns/status-system/) specified.",
            "figure": "/img/design-guidelines/status-system-fundamentals.png",
            "status": "new"
          },
          {
            "numeral": 2,
            "rule": "User Interface elements indicating state or status shall be designed with the [six colors](/patterns/status-system/#status-colors) specified.",
            "status": "new"
          }
        ]
      },
      {
        "name": "Data Visualization",
        "numeral": 2,
        "link": "/patterns/data-visualization/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Data visualizations shall have no more than 8 colors per data set to manage cognitive load.",
            "status": "new"
          }
        ]
      }
    ]
  },
  {
    "name": "Components",
    "numeral": 4,
    "rulesets": [
      {
        "name": "Button",
        "numeral": 1,
        "link": "/components/button/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Buttons shall be used for actionable controls only, not as state indicators.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Checkbox",
        "numeral": 2,
        "link": "/components/checkbox/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Checkboxes shall be used for setting values only, not to initiate actions.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Dialog Box",
        "numeral": 3,
        "link": "/components/dialog-box/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Dialog Boxes shall use Buttons for confirm or cancel actions.",
            "status": "deprecated"
          },
          {
            "numeral": 3,
            "rule": "Dialog Box confirmation Button shall be to the right of the cancel Button.",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Dialog Boxes shall be closed only with confirm or cancel Buttons.",
            "status": "new"
          }
        ]
      },
      {
        "name": "Drop Down",
        "numeral": 4,
        "link": "/components/drop-down/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Menu items shall use title-style capitalization.",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Menu items shall use an ellipsis (…) to indicate that further action is required to complete the command.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Global Status Bar",
        "numeral": 5,
        "link": "/components/global-status-bar/",
        "rules": [
          {
            "numeral": 1,
            "rule": "The Global Status Bar shall be reserved for global elements that appear on every screen.",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Global Status Bar elements shall be arranged left to right as shown in the [Most Complex Global Status Bar](/components/global-status-bar#figure-5.1.1) illustration.",
            "figure": "/img/components/global-status-complex.png",
            "status": "current"
          }
        ]
      },
      {
        "name": "Icons and Symbols",
        "numeral": 6,
        "link": "/components/icons-and-symbols/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Monitoring Icons shall include a label and a status symbol [as illustrated](/components/icons-and-symbols#monitoring-icons).",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Monitoring Icons shall be rendered with the [standard status colors](/patterns/status-system/#status-colors).",
            "figure": "/img/components/icons-monitoring-1.png",
            "status": "current"
          }
        ]
      },
      {
        "name": "Input Field",
        "numeral": 7,
        "link": "/components/input-field/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Stacked Input Fields shall be left aligned.",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Input Fields shall use the [text size defined in the CSS](https://bitbucket.org/rocketcom/astro-components/src/master/src/css/core/input.css#lines-66).",
            "status": "current"
          }
        ]
      },
      {
        "name": "Link",
        "numeral": 8,
        "link": "/components/link/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Links shall use the [color defined in the CSS](https://bitbucket.org/rocketcom/astro-components/src/master/src/css/common/_typography.css#lines-31).",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Links shall use a text style that is without an underline.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Log",
        "numeral": 9,
        "link": "/components/log/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Custom Log implementations shall perform all of the [scrolling](/components/log/#scroll-interaction) and [filtering](/components/log/#searching-and-filtering) interactions described.",
            "figure": "/img/components/log-search.png",
            "status": "current"
          }
        ]
      },
      {
        "name": "Pagination",
        "numeral": 10,
        "link": "/components/pagination/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Pagination shall use a text style that is without an underline.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Pop Up",
        "numeral": 11,
        "link": "/components/pop-up/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Menu items shall use title-style capitalization.",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": " Menu items shall use an ellipsis (…) to indicate that further action is required to complete the command.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Progress",
        "numeral": 12,
        "link": "/components/progress/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Progress indicator shall indicate the precise completion time for an operation.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Radio Button",
        "numeral": 13,
        "link": "/components/radio-button/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Radio Buttons shall be used only for mutually exclusive choices.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Search",
        "numeral": 14,
        "link": "/components/search/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Search Fields shall contain prompt text.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Segmented Button",
        "numeral": 15,
        "link": "/components/segmented-button/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Segmented Buttons shall be used only for mutually exclusive selections.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Status Symbol",
        "numeral": 16,
        "link": "/components/status-symbol/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Status Symbols shall always be rendered with the [specified shapes](/patterns/status-system/).",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Status Symbols shall always be rendered with the [specified colors](/patterns/status-system/#status-colors).",
            "status": "current"
          }
        ]
      },
      {
        "name": "Tabs",
        "numeral": 17,
        "link": "/components/tabs/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Tabs shall be arranged in a single row.",
            "status": "current"
          },
          {
            "numeral": 2,
            "rule": "Tabs shall use title-style capitalization.",
            "status": "current"
          }
        ]
      },
      {
        "name": "Toggle",
        "numeral": 18,
        "link": "/components/toggle/",
        "rules": [
          {
            "numeral": 1,
            "rule": "Toggle shall be used when the action takes immediate effect.",
            "status": "current"
          }
        ]
      }
    ]
