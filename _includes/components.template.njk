{% extends "base.template.njk" %}

{% block content %}

	<link rel="stylesheet" href="/css/chapters.css">
	<link rel="stylesheet" href="/css/components.css">
	<link rel="stylesheet" href="/css/sample.css">

	<h1>{{ title }}</h1>
	{% if demo %}

		<div class="demo-container">
			<iframe scrolling="no" src="{{ demo }}" style="width: 100%; height: 210px; overflow: hidden;"></iframe>

			<div class="sample--instructions">
				{% if storybook %}
					<a href="{{storybook}}">Storybook</a>
				{% endif %}
				{% if git %}
					<a href="{{git}}">Git</a>
				{% endif %}
			</div>
		</div>
	{% endif %}

	{{ content | safe | removeHeader }}
{% endblock %}