{% extends "base.template.njk" %}

{% block content %}

	<link rel="stylesheet" href="/css/chapters.css">
	<link rel="stylesheet" href="/css/components.css">
	<link rel="stylesheet" href="/css/sample.css">

	<h1>{{ title }}</h1>
	{% if demo %}

		<div class="demo-container">
			<iframe scrolling="no" src="https://astro-components.netlify.com/iframe.html?id={{ demo }}" style="width: 100%; height: {{demo.height}}; overflow: hidden;"></iframe>

			<div class="sample-links">
				{% if storybook %}
					<a class="sample-links__storybook" href="https://astro-components.netlify.com/?path=/story/{{storybook}}">
						Storybook
					</a>
				{% endif %}
				{% if git %}
					<a class="sample-links__bitbucket" href="https://bitbucket.org/rocketcom/astro-components/src/master/src/components/{{git}}">Bitbucket</a>
				{% endif %}
			</div>
		</div>
	{% endif %}

	{{ content | safe | removeHeader }}
{% endblock %}