{% macro navItem(data) %}
	<li style="color: #fff;">{{ data.label }}
		{% if data.items.length %}
			<ul>
				{% for navData in data.items %}
					{{ navItem(navData) }}
				{% endfor %}
		</ul>
	{% endif %}
</li>
{% endmacro %}

<link rel="stylesheet" href="/css/navigation.css">
<nav class="navigation">

<div class="navigation__masthead">
	<img class="navigation__masthead-logo" src="/img/_site/astro-logo--small.svg"/>
	<form>
		<input type="search">
	</form>
</div>

<ul class="parents" role="tree">
	{% for navData in navigation -%}
		{{ navItem(navData) }}
	{% endfor %}

