<link rel="stylesheet" href="/css/navigation.css">
<nav class="site-nav">

	<div class="site-nav__masthead">
		<img class="site-nav__masthead-logo" src="/img/_site/astro-logo--small.svg"/>
		<form>
			<input type="search">
		</form>
	</div>

	<ul class="parents">
		{% for navItem in navigation -%}
			<li class="parent">
				{{navItem.label}}
				{% if navItem.items.length %}
					<ul class="children">
						{% for subNavItem in navItem.items -%}
							<li class="link {{ "selected" if subNavItem.url === page.url.substr(0,page.url.length-1) }}">
								<a href="{{subNavItem.url}}">{{subNavItem.label}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>

</nav>